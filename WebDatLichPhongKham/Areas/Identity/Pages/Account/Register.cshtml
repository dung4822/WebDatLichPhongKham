@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}


<div class="container dangky">
    <div class="row py-5">
        <div class="col-4 offset-4">
            <h5 class="text-center">@ViewData["Title"]</h5>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <p class="text-center">Bạn đã có tài khoản?<a class="text-decoration-none fw-bold" id="login" asp-area="Identity" asp-page="/Account/Login"> Đăng nhập</a></p>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 email">
                    <span class="text-start">Địa chỉ email *</span>
                    <input asp-for="Input.Email" class="form-control ps-3 py-0 mt-2" autocomplete="username" aria-required="true"/>
                    @* <label asp-for="Input.Email"></label> *@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 password">
                    <span class="text-start">Mật khẩu *</span>
                    <input asp-for="Input.Password" class="form-control ps-3 py-0 mt-2" autocomplete="new-password" aria-required="true"/>
                    @* <label asp-for="Input.Password">Password</label> *@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <span class="text-start">Xác nhận mật khẩu *</span>
                    <input asp-for="Input.ConfirmPassword" class="form-control ps-3 py-0 mt-2" autocomplete="new-password" aria-required="true"/>
                    @* <label asp-for="Input.ConfirmPassword">Confirm Password</label> *@
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Đăng ký</button>
            </form>
        </div>
    </div>
</div>
